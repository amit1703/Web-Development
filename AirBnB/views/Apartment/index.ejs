<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-center mt-2">
  <h3>Apartments <small class="text-muted">choose one for you!</small></h3>
</div>
<% for(let i = 0 ; i < apartments.length ; i++){ %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= apartments[i].image %>" alt="picture" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= apartments[i].title %></h5>
        <p class="card-text"><%= apartments[i].description %></p>
        <div class="text-muted"><%= apartments[i].location %></div>
        <a
          href="/apartments/<%= apartments[i]._id %>"
          class="btn btn-secondary mt-3"
          >Details</a
        >
      </div>
    </div>
  </div>
</div>

<% } %>
